{
  "name": "@exploreui/webcomponents",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/dev-tools",
    "packages/storybook",
    "packages/components/*"
  ],
  "scripts": {
    "clean": "lerna clean",
    "bootstrap": "yarn install",
    "build:core": "rimraf packages/core/dist && yarn workspace @exploreui/lit build",
    "serve:core": "yarn workspace @exploreui/lit run serve",
    "format:eslint": "eslint \"**/*.{js,ts}\" --fix",
    "format:prettier": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --write",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint": "eslint \"**/*.{js,ts}\"",
    "postinstall": "husky install",
    "pre-commit-lint": "yarn lint-staged"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@open-wc/eslint-config": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
