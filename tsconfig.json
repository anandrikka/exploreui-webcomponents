{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2020", "dom", "dom.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    // "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "incremental": false,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "docs",
    "**/dist/",
    "**/*.test.ts",
    "**/node_modules"
  ]
}
